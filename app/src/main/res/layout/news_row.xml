<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/two_line_row_height"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding">

    <ImageView
        android:id="@+id/news_info_type"
        android:layout_width="@dimen/hot_icon_size"
        android:layout_height="@dimen/hot_icon_size"
        android:layout_centerVertical="true"
        android:src="@drawable/info_type_list"/>

    <TextView
        android:id="@+id/news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/news_name"
        android:textSize="@dimen/small_text_size"/>

    <TextView
        android:id="@+id/news_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/padding"
        android:layout_toEndOf="@id/news_info_type"
        android:layout_toLeftOf="@id/news_date"
        android:layout_toRightOf="@id/news_info_type"
        android:layout_toStartOf="@id/news_date"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/default_text_size"/>

</RelativeLayout>